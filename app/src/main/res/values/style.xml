<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="big_text_style">
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="header_text" parent="big_text_style">
        <item name="android:layout_marginStart">@dimen/container_padding</item>
    </style>

    <style name="medium_text_style">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="small_text_style">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="image_size_style">
        <item name="android:layout_width">@dimen/image_width</item>
        <item name="android:layout_height">@dimen/image_height</item>
    </style>
    <style name="rating_view_style">
        <item name="android:background">@drawable/rating_design</item>
        <item name="android:padding">@dimen/rating_padding</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="item_style">
        <item name="android:layout_width">@dimen/layout_width</item>
        <item name="android:layout_height">@dimen/layout_height</item>
    </style>
</resources>